@{
    ViewData["Title"] = "VideoPosts";
}


<main>
    <a class="nav-link text-dark" asp-area="" asp-controller="Video" asp-action="Upload">Upload</a>
    <a class="nav-link text-dark" asp-area="" asp-controller="Video" asp-action="Search">Search</a>
    <div class="flex-parent">
        @foreach (VideoPost post in ViewBag.VideoPosts)
        {
            <a class="nav-link text-dark" asp-area="" asp-route-id="@post.PostId" asp-controller="Video" asp-action="SingleVideo">
                <div class="post-obj">
                    <h3 class="post-obj-title">@post.Title</h3>
                    <img src=@post.ThumbPath alt="Post Thumbnail" class="post-obj-img">
                    <div class="post-obj-top">
                        <h5 class="poster-name">@post.PosterName </h5>
                        <img src="https://icones.pro/wp-content/uploads/2021/04/icone-noire-noir.png" alt="Like Button" class="post-like-button">
                    </div>
                    <div class="post-obj-bottom">
                        <h6 class="post-description">@post.Description</h6>
                    </div>
                </div>
            </a>
        }
    </div>
</main>